*{
	font-family: "Open Sans Condensed", sans-serif;
}

.container{
		width: 100%;
		margin-left: auto;
		display: flex;
		flex-wrap: wrap;
	}


.banner{
    text-transform: uppercase;
	padding: auto;
	width: 100%;
}

.header_logo{
	width: 110px;
	height: 110px;
	float: left;
}

.banner-name{
	text-align: right;
}

h3 {
	margin: auto;
}

.top-image{
padding-bottom: 2em;
}

.project-section{
		margin-left: 3em;
	}
	
hr{
	width: 100%;
}

h3 {
	margin: auto;
}

/* If the screen width is at least 330px wide, do this */
@media screen and (min-width: 330px){
	.container{
		width: 100%;
		margin: auto;
		display: flex;
		flex-wrap: wrap;
	}
	

}

/* If the screen width is at least 830px wide, do this */
@media screen and (min-width: 830px){
	.container{
		width: 80%;
		margin: auto;
		display: flex;
		flex-wrap: wrap;
	}
	
	.project-section{
		margin: auto;
	}
	
	.top-image{
		margin: auto;
}

	hr{
		width: 100%;
	}
}
	


@media only screen and (min-width: 330px) and (max-width:599px) {
		h1{
			font-size:34px;
		}

		h4{
			font-size:18px;
		}
	}